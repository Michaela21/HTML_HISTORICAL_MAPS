<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Linea del Tempo Interattiva</title>
  <style>
    body {
      font-family: sans-serif;
      background-color: #f5f5f5;
      padding: 50px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .timeline-container {
      position: relative;
      width: 90%;
      height: 80px;
      margin-top: 50px;
    }

    .timeline-bar {
      position: absolute;
      top: 30px;
      left: 0;
      width: 100%;
      height: 20px;
      background-color: #a0d8ef;
      border-radius: 10px;
    }

    .year-label {
      position: absolute;
      top: 55px;
      font-size: 14px;
      color: #333;
    }

    .year-label.start {
      left: 0;
    }

    .year-label.end {
      right: 0;
    }

    .hover-year {
      position: absolute;
      top: -30px;
      font-size: 16px;
      color: #003366;
      font-weight: bold;
      pointer-events: none;
      display: none;
    }

    .cursor-dot {
      position: absolute;
      top: 39px; /* vertical center of the timeline bar */
      width: 8px;
      height: 8px;
      background-color: #003366;
      border-radius: 50%;
      transform: translateX(-50%);
      pointer-events: none;
      display: none;
    }
  </style>
</head>
<body>

  <h1>Linea del Tempo: 1900â€“2025</h1>

  <div class="timeline-container" id="timeline">
    <div class="timeline-bar"></div>
    <div class="year-label start">1900</div>
    <div class="year-label end">2025</div>
    <div class="hover-year" id="hoverYear"></div>
    <div class="cursor-dot" id="cursorDot"></div>
  </div>

  <script>
    const timeline = document.getElementById('timeline');
    const hoverYear = document.getElementById('hoverYear');
    const cursorDot = document.getElementById('cursorDot');
    const startYear = 1900;
    const endYear = 2025;

    timeline.addEventListener('mousemove', function (e) {
      const rect = timeline.getBoundingClientRect();
      const x = e.clientX - rect.left;

      const percent = x / rect.width;
      const year = Math.round(startYear + percent * (endYear - startYear));

      hoverYear.textContent = year;
      hoverYear.style.left = `${x - 20}px`;
      hoverYear.style.display = 'block';

      cursorDot.style.left = `${x}px`;
      cursorDot.style.display = 'block';
    });

    timeline.addEventListener('mouseleave', function () {
      hoverYear.style.display = 'none';
      cursorDot.style.display = 'none';
    });
  </script>

</body>
</html>
